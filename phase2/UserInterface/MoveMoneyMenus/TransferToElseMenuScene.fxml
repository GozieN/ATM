<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="phase2.UserInterface.MoveMoneyMenus.TransferToElseMenuController">
	<children>
		<Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="[transfer to else menu]">
			<font>
				<Font size="20.0" />
			</font>
		</Button>
		<Label layoutX="51.0" layoutY="100.0" text="select an account to transfer from">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<ComboBox fx:id="userBankAccounts" layoutX="51.0" layoutY="128.0" prefWidth="150.0" promptText="bank account" />
		<Label fx:id="userBankAccountsStatus" layoutX="206.0" layoutY="132.0" />
		<Label layoutX="51.0" layoutY="176.0" text="enter the account number of the account to transfer to">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
      <TextField fx:id="toAccountIn" layoutX="53.0" layoutY="204.0" onAction="#transfer" promptText="account number" />
		<Label fx:id="toAccountInStatus" layoutX="206.0" layoutY="208.0" />
		<Label layoutX="51.0" layoutY="255.0" text="enter an amount to transfer">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<TextField fx:id="amountIn" layoutX="52.0" layoutY="282.0" onAction="#transfer" promptText="amount" />
		<Label fx:id="amountInStatus" layoutX="205.0" layoutY="286.0" />
		<Button layoutX="226.0" layoutY="351.0" mnemonicParsing="false" onAction="#transfer" text="transfer">
			<font>
				<Font size="20.0" />
			</font>
		</Button>
		<Label fx:id="endStatus" layoutX="324.0" layoutY="358.0">
			<font>
				<Font size="20.0" />
			</font>
		</Label>
		<Button layoutX="14.0" layoutY="542.0" mnemonicParsing="false" onAction="#back" text="back">
			<font>
				<Font size="20.0" />
			</font>
		</Button>
		<Button layoutX="90.0" layoutY="542.0" mnemonicParsing="false" onAction="#exit" text="exit">
			<font>
				<Font size="20.0" />
			</font>
		</Button>
	</children>
</AnchorPane>

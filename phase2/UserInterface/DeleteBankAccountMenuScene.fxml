<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="phase2.UserInterface.DeleteBankAccountMenuController">
   <children>
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="[Delete Bank Account Menu]">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <ComboBox fx:id="userBankAccounts" layoutX="151.0" layoutY="115.0" prefWidth="150.0" promptText="Bank Account" />
      <Label fx:id="userBankAccountsStatus" layoutX="307.0" layoutY="119.0" />
      <Label layoutX="50.0" layoutY="249.0" text="WARNING: This action is irreversible - once the bank account has been deleted, it cannot be recovered">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="masterAccessKeyIn" layoutX="151.0" layoutY="352.0" onAction="#deleteBankAccount" promptText="Master Access Key">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <Button layoutX="406.0" layoutY="352.0" mnemonicParsing="false" onAction="#deleteBankAccount" text="DELETE BANK ACCOUNT">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Label fx:id="masterAccessKeyInStatus" layoutX="155.0" layoutY="398.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="endStatus" layoutX="405.0" layoutY="452.0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button layoutX="14.0" layoutY="542.0" mnemonicParsing="false" onAction="#back" text="Back">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button layoutX="90.0" layoutY="542.0" mnemonicParsing="false" onAction="#exit" text="Exit">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
